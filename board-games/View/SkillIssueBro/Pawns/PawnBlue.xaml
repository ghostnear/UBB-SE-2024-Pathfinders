<UserControl x:Class="BoardGames.View.SkillIssueBro.Pawns.PawnBlue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoardGames.View.SkillIssueBro.Pawns"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="91" Height="91" HorizontalAlignment="Center">
        <Button x:Name="button"  Width="52" Height="65" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" >
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Style>
            </Button.Style>

            <Canvas  Width="91" Height="91" HorizontalAlignment="Center">

                <Polygon Points="20,61 45.5,20 71,61" Fill="DarkBlue" Stroke="White" StrokeThickness="2"/>

                <Ellipse Width="40" Height="40" Fill="DarkBlue" Stroke="White" StrokeThickness="2"  Canvas.Left="25.5" Canvas.Top="-7"/>
            </Canvas>
        </Button>
    </Grid>
</UserControl>
