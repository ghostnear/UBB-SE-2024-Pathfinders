<Page x:Class="BoardGames.View.SkillIssueBro.Menus.SkillIssueBroMainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoardGames.View.SkillIssueBro.Menus"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Viewbox>
        <Grid Height="1080" Width="1920" Background="LightYellow">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,150" FontSize="90" FontWeight="DemiBold" Grid.Row="0" Foreground="DarkMagenta">Skill issue, Bro!
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="5" Opacity="0.4" BlurRadius="10"></DropShadowEffect>
            </TextBlock.Effect>
        </TextBlock>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>


            <Button Click="OnHostButtonClicked"  Foreground="White" Background="Red" FontWeight="Bold" FontSize="50" Width="500" Height="200">
                <Border  >

                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="320" ShadowDepth="5" Opacity="0.7"/>
                    </Border.Effect>

                    <TextBlock >host new game
                    </TextBlock>

                </Border>
            </Button>

                <Button Click="OnJoinButtonClicked" Foreground="White" Background="Red" FontWeight="Bold" FontSize="50" Width="500" Height="200" Grid.Column="1">
                <Border  >

                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="320" ShadowDepth="5" Opacity="0.7"/>
                    </Border.Effect>

                    <TextBlock >join game
                    </TextBlock>


                </Border>
            </Button>

                <Button Click="OnBackButtonClicked" Margin="235,0" FontSize="30" Width="224" Height="52"  Foreground="White" Background="Black" Grid.Column="0" Grid.Row="1" Content="Back" HorizontalAlignment="Left"></Button>
        </Grid>


    </Grid>
    </Viewbox>
</Page>
