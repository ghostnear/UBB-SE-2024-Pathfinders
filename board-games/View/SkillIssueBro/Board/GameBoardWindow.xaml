<UserControl x:Class="BoardGames.View.SkillIssueBro.Board.GameBoardWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoardGames.View.SkillIssueBro.Board"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox >

        <Grid Width="1920" >
            <Grid.ColumnDefinitions>

                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition Width="1082"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <local:Column1 x:Name="column1"/>
            <local:GameBoard x:Name="gameBoard" Grid.Column="1" Width="1082" Height="1080"></local:GameBoard>
            <local:Column2 x:Name="column2" Grid.Column="2"/>
        </Grid>
    </Viewbox>
</UserControl>
